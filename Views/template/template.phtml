        }

        .document-title {
            font-size: 24px;
            /* text-3xl */
            font-weight: 700;
            /* font-bold */
        }

        /* Information Section (Client/Surveyor) */
        .info-section {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 32px;
            margin-bottom: 40px;
            font-size: 14px; /* text-sm */
        }

        .info-block h2 {
            font-weight: 700;
            font-size: 18px; /* text-lg */
            margin-bottom: 8px;
