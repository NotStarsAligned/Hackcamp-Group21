        }
        .info-block.right h2 {
            padding-left: 0;
            padding-right: 8px;
            border-left: none;
            border-right: 4px solid #22d3ee;
        }
        .info-block.right {
            text-align: right;
        }

        /* Table Styles */
        .item-table-container {
            overflow-x: auto;
        }

        .item-table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #d1d5db; /* border-gray-200/300 */
            border-radius: 8px;
        }

        .item-table thead {
            background-color: #ecfeff;
            /* bg-cyan-50 */
        }

        .item-table th, .item-table td {
            padding: 12px 16px;
            text-align: left;
            border-bottom: 1px solid #f3f4f6; /* Subtle row separation */
        }

        .item-table th {
            font-size: 12px;
            /* text-xs */
            font-weight: 700;
            text-transform: uppercase;
            color: #4b5563;
            /* text-gray-700 */
        }

        .item-table td {
            font-size: 14px;
            /* text-sm */
        }

        .item-table td.center {
            text-align: center;
        }

        .item-table td.right {
            text-align: right;
        }

        /* Totals Summary */
        .summary-container {
            display: flex;
            justify-content: flex-end;
        }

        .summary-box {
            width: 100%;
            max-width: 50%; /* md:w-1/2 */
        }

        .summary-details {
            padding: 16px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            background-color: #f9fafb; /* bg-gray-50 */
            margin-bottom: 16px;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 4px;
            padding-bottom: 4px;
            font-size: 16px;
            /* text-base */
        }

        .summary-row.border-top {
            border-top: 1px solid #d1d5db;
            padding-top: 8px;
            margin-top: 4px;
            font-size: 18px; /* text-lg */
            font-weight: 700;
        }

        .vat-amount {
            font-weight: 600;
            color: #dc2626; /* text-red-600 */
        }

        /* Grand Total Box */
        .grand-total {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px;
            background-color: #0e7490; /* bg-cyan-700 */
            color: white;
            border-radius: 8px;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            /* shadow-xl */
        }

        .grand-total .label {
            font-size: 24px;
            /* text-2xl */
            font-weight: 700;
        }

        .grand-total .amount {
            font-size: 36px;
            /* text-4xl */
            font-weight: 800;
        }

        /* Footer/Notes */
        .invoice-footer {
            margin-top: 48px;
            padding-top: 24px;
            border-top: 1px solid #d1d5db;
            font-size: 12px; /* text-xs */
            color: #6b7280;
            /* text-gray-500 */
            text-align: center;
        }
        .invoice-footer h4 {
            font-weight: 700;
            color: #374151; /* text-gray-700 */
            margin-bottom: 8px;
        }
        .invoice-footer p {
            margin-top: 8px;
        }

        /* Print Styles - Ensure only the document content is visible */
        @media print {
            body {
                background-color: white;
                padding: 0;
            }
            .no-print {
                display: none !important;
            }
            .invoice-paper {
                box-shadow: none !important;
                border-radius: 0 !important;
                margin: 0 !important;
                max-width: 100%;
                padding: 0 !important;
            }
            @page {
                size: A4;
                margin: 0.5in;
            }
        }
    </style>
</head>
