<script>
    document.addEventListener('DOMContentLoaded', function () {

        // Helper to show a temporary flash message
        function showFlash(message, type) {
            const existing = document.querySelector('.wishlist-flash');
            if (existing) existing.remove();

            const div = document.createElement('div');
            div.className = 'wishlist-flash ' + (type === 'error' ? 'wishlist-flash-error' : 'wishlist-flash-success');
            div.textContent = message;
            document.body.appendChild(div);

            void div.offsetWidth; // Force reflow
            setTimeout(function () {
                if (div.parentNode) div.parentNode.removeChild(div);
            }, 3000);
        }

        // Confirmation modal wiring
        const overlay = document.getElementById('wishlist-confirm-overlay');
        const btnYes  = document.getElementById('wishlist-confirm-yes');
        const btnNo   = document.getElementById('wishlist-confirm-no');
        let pendingForm = null;

        function openConfirm(form) {
            pendingForm = form;
            overlay.style.display = 'flex';
        }

        function closeConfirm() {
            pendingForm = null;
            overlay.style.display = 'none';
        }

        btnNo.addEventListener('click', closeConfirm);

        btnYes.addEventListener('click', function () {
            if (!pendingForm) return;

            const formToSend = pendingForm;
            const variantIdInput = formToSend.querySelector('input[name="variant_id"]');
            const variantId = variantIdInput ? variantIdInput.value : null;

            const formData = new FormData(formToSend);
            formData.append('ajax', '1');
            formData.append('remove_wishlist', '1');

            fetch('wishlist.php', {
                method: 'POST',
                body: formData,
                credentials: 'same-origin'
            })
                .then(r => r.json())
                .then(data => {
                    closeConfirm();
                    if (data && data.message) {
                        showFlash(data.message, data.status === 'error' ? 'error' : 'success');
                        if (data.status !== 'error') {
                            // RHEMA'S WORK: Updated logic to find card via checkbox value since card is outside form
                            if (variantId) {
                                const checkbox = document.querySelector(`input.select-box[value="${variantId}"]`);
                                if (checkbox) {
                                    const card = checkbox.closest('.product-card');
                                    if (card) card.remove();
                                }
                            }

                            const grid = document.getElementById('wishlist-grid');
                            if (!grid || grid.querySelectorAll('.product-card').length === 0) {
                                const emptyMsg = document.getElementById('wishlist-empty-message');
                                if (emptyMsg) emptyMsg.style.display = 'block';
                            }
                        }
                    }
                })
                .catch(() => {
                    closeConfirm();
                    showFlash('Something went wrong, please try again.', 'error');
                });
        });

        const forms = document.querySelectorAll('.wishlist-card-form');
        forms.forEach(function (form) {
            form.addEventListener('submit', function (event) {
                event.preventDefault();
                openConfirm(form);
            });
        });
    });
</script>

