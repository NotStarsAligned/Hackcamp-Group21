<!-- Small script to handle remove-from-wishlist via AJAX and show confirmation -->
<script>
    document.addEventListener('DOMContentLoaded', function () {

        // Helper to show a temporary flash message in the centre of the screen
        function showFlash(message, type) {
            // Remove any existing flash first so we don't stack them
            const existing = document.querySelector('.wishlist-flash');
            if (existing) {
                existing.remove();
            }

            const div = document.createElement('div');
            div.className = 'wishlist-flash ' + (type === 'error'
                ? 'wishlist-flash-error'
                : 'wishlist-flash-success');

            div.textContent = message;
            document.body.appendChild(div);

            // Force reflow so CSS animations restart correctly
            void div.offsetWidth;

            // Remove the element after the fade-out has finished (a bit longer than the CSS animation)
            setTimeout(function () {
                if (div.parentNode) {
                    div.parentNode.removeChild(div);
                }
            }, 3000);
        }

        // Simple confirmation modal wiring
        const overlay = document.getElementById('wishlist-confirm-overlay');
        const btnYes  = document.getElementById('wishlist-confirm-yes');
        const btnNo   = document.getElementById('wishlist-confirm-no');

        let pendingForm = null;

        function openConfirm(form) {
            pendingForm = form;
            overlay.style.display = 'flex';
        }

        function closeConfirm() {
            pendingForm = null;
            overlay.style.display = 'none';
        }

        btnNo.addEventListener('click', function () {
            closeConfirm();
        });

        btnYes.addEventListener('click', function () {
            if (!pendingForm) return;

            // Keep references before we clear the modal state
            const formToSend = pendingForm;
            const cardToRemove = formToSend.closest('.product-card');

            const formData = new FormData(formToSend);
            formData.append('ajax', '1');
            formData.append('remove_wishlist', '1');

            fetch('wishlist.php', {
                method: 'POST',
                body: formData,
                credentials: 'same-origin'
            })
                .then(function (response) { return response.json(); })
                .then(function (data) {
                    closeConfirm();

                    if (data && data.message) {
                        const type = (data.status === 'error') ? 'error' : 'success';
                        showFlash(data.message, type);

                        if (data.status !== 'error') {
                            // Remove the card from the UI after successful removal
                            if (cardToRemove) {
                                cardToRemove.remove();
                            }

                            // If no cards left, show "wishlist empty"
                            const grid = document.getElementById('wishlist-grid');
                            if (!grid || grid.querySelectorAll('.product-card').length === 0) {
                                const emptyMsg = document.getElementById('wishlist-empty-message');
                                if (emptyMsg) emptyMsg.style.display = 'block';
                            }
                        }
                    }
                })
                .catch(function () {
                    closeConfirm();
                    showFlash('Something went wrong, please try again.', 'error');
                });
        });

        // Intercept form submit so we can show custom confirm popup first
        const forms = document.querySelectorAll('.wishlist-card-form');
        forms.forEach(function (form) {
            form.addEventListener('submit', function (event) {
                event.preventDefault();
                openConfirm(form);
            });
        });
    });
</script>

